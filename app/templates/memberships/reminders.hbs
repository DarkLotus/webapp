<div class="page-header">
    <h1>
        Memberships Expiring In The Next 30 Days
    </h1>
</div>

<table class="table table-hover">
    <thead>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Type</th>
        <th>Expires At</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {{#each}}
        <tr>
            <td>{{user.firstName}}</td>
            <td>{{user.lastName}}</td>
            <td>{{type}}</td>
            <td>{{format-date expireAt}}</td>
            <td>
                <button {{action 'sendReminder' this}} {{bind-attr disabled="reminderAlreadySent"}} class="btn btn-primary">
                    Send Reminder
                </button>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>

<button {{action "loadMore"}} {{bind-attr disabled=isLoading}} class="btn btn-default">
    Load More
</button>