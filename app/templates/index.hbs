{{#if currentUser}}
    <div class="page-header">
        <h1>{{t 'index.title' firstNameBinding='currentUser.firstName'}}</h1>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">{{t 'index.hostProfile.title'}}</div>
                <div class="panel-body">
                    {{#if hostProfile}}
                        <p>{{t 'index.hostProfile.instructions' farmNameBinding='hostProfile.farmName'}}</p>
                        {{#link-to 'host.index' hostProfile.id class="btn btn-primary"}}{{t 'index.viewProfile'}}{{/link-to}}
                        {{#link-to 'host.edit' hostProfile.id class="btn btn-default"}}{{t 'index.editProfile'}}{{/link-to}}
                    {{else}}
                        <p>{{t 'index.noHostProfile'}}</p>
                        {{#link-to 'hosts.new' class="btn btn-primary"}}{{t 'index.createProfile'}}{{/link-to}}
                    {{/if}}
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">{{t 'index.wwooferProfile.title'}}</div>
                <div class="panel-body">
                    {{#if wwooferProfile}}
                        <p>{{t 'index.wwooferProfile.instructions'}}</p>
                        {{#link-to 'wwoofer.edit' wwooferProfile.id class="btn btn-default"}}{{t 'index.editProfile'}}{{/link-to}}
                    {{else}}
                        <p>{{t 'index.noWwooferProfile'}}</p>
                        {{#link-to 'wwoofers.new' class="btn btn-primary"}}{{t 'index.createProfile'}}{{/link-to}}
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
