{{#each option in options}}
    <div class="checkbox">
        <input type="checkbox" {{bind-attr checked=option.isSelected}} {{action "select" option on="change"}} {{bind-attr id=option.value}}>
        <div class="farm-icon vineyard"></div>
        <label {{bind-attr for=option.value}}>{{option.value}}</label>
    </div>
{{/each}}