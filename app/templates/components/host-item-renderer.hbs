<div class="farm list-group-item col-md-12">
    <div class="pull-left col-host-thumb">
        <div class="host-thumb hidden-md">
            {{#if photoId}}
                {{host-thumb url=photo.completeUrl}}
            {{else}}
                {{host-thumb url="assets/images/wwoof-no-photo.png"}}
            {{/if}}
        </div>
    </div>
    <div class="col-md-10 col-lg-6 farm-item">
        <div class="col-md-12">
            <h4>{{farmName}}</h4>
            <p class="description">
                {{description}}
            </p>
        </div>
    </div>
    <div class="col-md-2 col-lg-2 farm-item-btn">
        {{#link-to "host" hostId title=farmName }}
            <button class="btn btn-default btn-block-tn">{{t 'literal.view'}}</button>
        {{/link-to}}
    </div>
</div>
