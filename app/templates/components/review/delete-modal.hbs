{{#modal-dialog close=close translucentOverlay=true}}
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" {{action close}} aria-label={{t 'literal.close'}}>
      <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title">
      {{t 'delete-modal.title'}}
    </h4>
  </div>
  <div class="modal-body">
    {{t 'delete-modal.areYouSure'}}
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" {{action close}}>
      {{t 'literal.close'}}
    </button>
    <button type="button" class="btn btn-danger" {{action deleteReview review}} disabled={{review.isSaving}}>
      {{t 'literal.delete'}}
    </button>
  </div>
{{/modal-dialog}}
