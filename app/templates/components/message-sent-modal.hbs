{{#modal-dialog close=close translucentOverlay=true}}
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" {{action close}} aria-label={{t 'literal.close'}}>
      <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title">
      {{t 'host.contact.modal.title'}}
    </h4>
  </div>
  <div class="modal-body">
    <p>{{t 'host.contact.modal.message'}}</p>
  </div>
  <div class="modal-footer">
    <button class="btn btn-primary" {{action close}}>
      {{t 'literal.ok'}}
    </button>
  </div>
{{/modal-dialog}}
