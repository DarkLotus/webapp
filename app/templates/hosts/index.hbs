<div class="row">
    <div class="col-md-6 col-sm-12">
        <div class="search-box">
            <div class="form" role="form">
                <h4>{{t 'hosts.index.find'}}</h4>
                <div class="form-group">
                    <div class="input-group">
                        <label class="sr-only" for="searchTerm">{{t 'literal.search'}}</label>
                            {{input class="form-control" type="search"  id="searchTerm" placeholderTranslation="hosts.index.searchTerm.placeholder" value=searchTerm action="updateHosts"}}
                            <label {{action "updateHosts"}} {{bind-attr disabled=isLoading}} class="btn btn-primary btn-block-tn input-group-addon">{{t 'literal.search'}}</label>
                    </div>
                </div>
                <div class="form-group">
                    {{toggle-options values=allActivities selected=activities buttonDisplayName=activitiesDisplayName optionValuePath='id'}}
                </div>
                {{#if session.user.isAdmin}}
                    <h4>{{t 'hosts.index.admin'}}</h4>
                    <div class="col-md-4 col-sm-12">
                        {{#radio-button value="pending" groupValue=approvalStatus class="radio"}}
                            {{t 'hosts.index.pending.label'}}
                        {{/radio-button}}
                        {{#radio-button value="approved" groupValue=approvalStatus class="radio"}}
                            {{t 'hosts.index.approved.label'}}
                        {{/radio-button}}
                        {{#radio-button value="rejected" groupValue=approvalStatus class="radio"}}
                            {{t 'hosts.index.rejected.label'}}
                        {{/radio-button}}
                    </div>
                    <div class="col-md-4 col-sm-12">
                        {{#radio-button value="valid" groupValue=membershipStatus class="radio"}}
                            {{t 'hosts.index.valid.label'}}
                        {{/radio-button}}
                        {{#radio-button value="expired" groupValue=membershipStatus class="radio"}}
                            {{t 'hosts.index.expired.label'}}
                        {{/radio-button}}
                        {{#radio-button value="none" groupValue=membershipStatus class="radio"}}
                            {{t 'hosts.index.none.label'}}
                        {{/radio-button}}
                    </div>
                    <div class="col-md-4 col-sm-12">
                        <div class="checkbox">
                            <label>
                                {{input type="checkbox" checked=isSuspended}}
                                {{t 'hosts.index.suspended.label'}}
                            </label>
                        </div>
                        <div class="checkbox">
                            <label>
                                {{input type="checkbox" checked=isHidden}}
                                {{t 'hosts.index.hidden.label'}}
                            </label>
                        </div>
                    </div>
                {{/if}}
                <div class="hidden">
                    <button {{action "updateHosts"}} {{bind-attr disabled=isLoading}}></button>
                </div>
            </div>
        </div>
        <div id="resultList" class="hidden-sm hidden-xs">
            {{#if isLoading}}
                {{partial 'loading'}}
            {{else}}
                <div class="results-box">
                    {{#if hasVisibleFeatures}}
                        <div class="list-group">
                            {{#each feature in showedFeatures}}
                                {{host-item-renderer host=feature}}
                            {{/each}}
                            <div class="row col-md-12">
                                <p class="load-more">
                                    <button {{action "moreHosts"}} {{bind-attr disabled=hideMoreButton}} class="btn btn-default center-block">
                                        {{t 'literal.loadMore'}}
                                    </button>
                                <p class="load-more">
                            </div>
                        </div>
                    {{else}}
                        <p class="text-center"><strong>{{t 'hosts.index.noResults'}}</strong></p>
                    {{/if}}
                </div>
            {{/if}}
        </div>
    </div>
    <div id="rightRow" class="col-md-6 col-sm-12 col-xs-12">
        {{outlet map}}
    </div>
</div>
