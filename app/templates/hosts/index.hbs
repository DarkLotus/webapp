<div class="row">
    <div class="col-md-3">
        <form class="form" role="form">
            <div class="form-group">
                <label class="sr-only" for="searchTerm">Email address</label>
                {{input type="text" class="form-control" id="searchTerm" placeholder="Contact" value=controllers.hosts.searchTerm action="searchProjects"}}
            </div>
            <div class="form-group">
                <div class="dropdown-item">
                    {{view Ember.Select class="form-control" prompt="Departement" optionLabelPath="content.nom" content=controllers.hosts.departementFilterOptions value=controllers.hosts.departementFilter}}
                </div>
            </div>
            <button {{action "searchHosts"}} class="btn btn-default">Search</button>
        </form>
    </div>
    <div class="col-md-9">
        <div class="list-group">
            {{#each itemController="host"}}
                {{#link-to "host" model title=farmName class="list-group-item"}}
                    <div class="row">
                        <div class="col-md-3">
                            <div class="host-thumb">
                                {{#if photos.length}}
                                    <img {{bind-attr src="mainPhoto.completeUrl"}} />
                                {{else}}
                                    <img src="wwoof-no-photo.png"/>
                                {{/if}}
                            </div>
                        </div>
                        <div class="col-md-9">
                            {{farmName}} - {{contact}}
                        </div>
                    </div>
                {{/link-to}}
            {{/each}}
            <p>
                <button {{action "loadMoreHosts"}} class="btn btn-default">Load more!</button>
                Total: {{totalHosts}}
            </p>
        </div>
    </div>
</div>