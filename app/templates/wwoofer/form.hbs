<form class="form-horizontal">
    <div class="page-header">
        <h1>
            {{model.user.fullName}}
            {{#if model.fullName2}}
                <small>{{t 'wwoofer.index.and'}} {{model.fullName2}}</small>
            {{/if}}
        </h1>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">{{t 'wwoofer.form.moreAboutYou'}}</h3>
        </div>
        <div class="panel-body">
            <div {{bind-attr class=":form-group model.fieldErrors.intro.length:has-error"}}>
                <label for="intro" class="col-sm-2 control-label">{{t 'wwoofer.form.intro.label'}}</label>
                <div class="col-sm-10">
                    {{textarea id="intro" name="intro" value=model.intro class="form-control" rows="5"}}
                    {{error-display model.fieldErrors.intro}}
                </div>
            </div>
            <div class="col-sm-offset-2 col-sm-10">
                <p class="form-details">
                    {{t 'wwoofer.form.introInstructions'}}
                </p>
            </div>
            <div {{bind-attr class=":form-group model.fieldErrors.tripMotivation.length:has-error"}}>
                <label for="tripMotivation" class="col-sm-2 control-label">{{t 'wwoofer.form.tripMotivation.label'}}</label>
                <div class="col-sm-10">
                    {{textarea id="tripMotivation" name="tripMotivation" value=model.tripMotivation class="form-control" rows="5"}}
                    {{error-display model.fieldErrors.tripMotivation}}
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">{{t 'wwoofer.form.otherWwoofer'}}</h3>
        </div>
        <div class="panel-body">
            <div class="col-sm-offset-2 col-sm-10">
                <p class="form-details">
                    {{t 'wwoofer.form.otherWwooferInstructions'}}
                </p>
            </div>
            {{#if canEditOtherWwoofer }}
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <div class="checkbox">
                            <label>
                                {{input type="checkbox" name="otherWwoofer" checked=secondWwooferChecked}}
                                {{t 'wwoofer.form.otherWwoofer.label'}}
                            </label>
                        </div>
                    </div>
                </div>
            {{else}}
                {{#unless secondWwooferChecked}}
                    <div class="col-sm-offset-2 col-sm-10">
                        {{t 'wwoofer.form.noOtherWwoofer'}}
                    </div>
                {{/unless}}
            {{/if}}
            {{#if secondWwooferChecked}}
                <div {{bind-attr class=":form-group fieldErrors.model.firstName2.length:has-error"}}>
                    <label for="firstName2" class="col-sm-2 control-label">{{t 'user.form.firstName.label'}}</label>
                    <div class="col-sm-10">
                        {{#if canEditOtherWwoofer}}
                            {{input type="text" id="firstName2" name="firstName2" value=model.firstName2 class="form-control"}}
                            {{error-display fieldErrors.model.firstName2}}
                        {{else}}
                            <p class="form-control-static">{{model.firstName2}}</p>
                        {{/if}}
                    </div>
                </div>
                <div {{bind-attr class=":form-group fieldErrors.model.lastName2.length:has-error"}}>
                    <label for="lastName2" class="col-sm-2 control-label">{{t 'user.form.lastName.label'}}</label>
                    <div class="col-sm-10">
                        {{#if canEditOtherWwoofer}}
                            {{input type="text" id="lastName2" name="lastName2" value=model.lastName2 class="form-control"}}
                            {{error-display fieldErrors.model.lastName2}}
                        {{else}}
                            <p class="form-control-static">{{model.lastName2}}</p>
                        {{/if}}
                    </div>
                </div>
                <div {{bind-attr class=":form-group fieldErrors.selectedDate.length:has-error"}}>
                    <label for="birthDate2" class="col-sm-2 control-label">{{t 'user.form.birthDate.label'}}</label>
                    <div class="col-sm-10">
                        {{#if canEditOtherWwoofer}}
                            {{date-picker selectedDate=selectedDate}}
                            {{error-display fieldErrors.selectedDate}}
                        {{else}}
                            <p class="form-control-static">{{format-date model.birthDate2}}</p>
                        {{/if}}
                    </div>
                </div>
            {{/if}}
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">{{t 'wwoofer.form.address'}}</h3>
        </div>
        <div class="panel-body">
            <div class="col-sm-offset-2 col-sm-10">
                <p class="form-details">
                    {{t 'wwoofer.form.addressInstructions'}}
                </p>
            </div>
            <div {{bind-attr class=":form-group model.address.fieldErrors.address1.length:has-error"}}>
                <label for="address1" class="col-sm-2 control-label">{{t 'address.form.address1.label'}}</label>
                <div class="col-sm-10">
                    {{input type="text" id="address1" name="address1" value=model.address.address1 class="form-control" placeholderTranslation='address.form.address1.placeholder'}}
                    {{error-display model.address.fieldErrors.address1}}
                </div>
            </div>
            <div {{bind-attr class=":form-group model.address.fieldErrors.address2.length:has-error"}}>
                <label for="address2" class="col-sm-2 control-label">{{t 'address.form.address2.label'}}</label>
                <div class="col-sm-10">
                    {{input type="text" id="address2" name="address2" value=model.address.address2 class="form-control" placeholderTranslation='address.form.address2.placeholder'}}
                    {{error-display model.address.fieldErrors.address2}}
                </div>
            </div>
            <div {{bind-attr class=":form-group model.address.fieldErrors.city.length:has-error"}}>
                <label for="city" class="col-sm-2 control-label">{{t 'address.form.city.label'}}</label>
                <div class="col-sm-10">
                    {{input type="text" id="city" name="city" value=model.address.city class="form-control"}}
                    {{error-display model.address.fieldErrors.city}}
                </div>
            </div>
            <div {{bind-attr class=":form-group model.address.fieldErrors.zipCode.length:has-error"}}>
                <label for="zipCode" class="col-sm-2 control-label">{{t 'address.form.zipCode.label'}}</label>
                <div class="col-sm-10">
                    {{input type="text" id="zipCode" name="zipCode" value=model.address.zipCode class="form-control"}}
                    {{error-display model.address.fieldErrors.zipCode}}
                </div>
            </div>
            <div {{bind-attr class=":form-group model.address.fieldErrors.country.length:has-error"}}>
                <label for="country" class="col-sm-2 control-label">{{t 'address.form.country.label'}}</label>
                <div class="col-sm-10">
                    {{view "select"
                            content=controllers.countries.content
                            optionValuePath="content.id"
                            optionLabelPath="content.name"
                            selection=model.address.country
                            class="form-control"
                            name="country"
                            promptTranslation='address.form.country.prompt'}}
                    {{error-display model.address.fieldErrors.country}}
                </div>
            </div>
            {{#if model.address.country}}
                <div class="form-group">
                    {{#if model.address.country.isFrance}}
                        <label for="department" class="col-sm-2 control-label">{{t 'address.form.department.label'}}</label>
                        <div class="col-sm-10">
                            {{view "select"
                                    content=controllers.departments.content
                                    optionValuePath="content.id"
                                    optionLabelPath="content.name"
                                    selection=model.address.department
                                    class="form-control"
                                    name="department"
                                    promptTranslation="address.form.department.prompt"}}
                        </div>
                    {{else}}
                        <label for="state" class="col-sm-2 control-label">{{t 'address.form.state.label'}}</label>
                        <div class="col-sm-10">
                            {{input type="text" id="state" name="state" value=model.address.state class="form-control"}}
                        </div>
                    {{/if}}
                </div>
            {{/if}}
        </div>
    </div>
    {{#if session.user.isAdmin}}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">{{t 'wwoofer.form.admin'}}</h3>
            </div>
            <div class="panel-body">
                <div {{bind-attr class=":form-group model.fieldErrors.note.length:has-error"}}>
                    <label for="note" class="col-sm-2 control-label">{{t 'wwoofer.form.note.label'}}</label>
                    <div class="col-sm-10">
                        {{textarea id="note" name="note" value=model.note class="form-control" rows="4"}}
                        {{error-display model.fieldErrors.note}}
                    </div>
                </div>
            </div>
        </div>
    {{/if}}
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button {{action "saveWwoofer"}} disabled={{model.isSaving}} class="btn btn-primary {{if model.isNew 'pull-right'}}">
                {{#if model.isNew}}
                    {{t 'literal.continue'}}
                {{else}}
                    {{t 'literal.save'}}
                {{/if}}
            </button>
        </div>
    </div>
</form>
