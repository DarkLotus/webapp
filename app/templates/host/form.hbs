<form class="form-horizontal">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">{{t 'host.form.generalInformation'}}</h3>
    </div>
    <div class="panel-body">
      <div class="form-group {{if model.fieldErrors.farmName.length 'has-error'}}">
        <label for="farm-name" class="col-sm-2 control-label">{{t 'host.form.farmName.label'}}</label>

        <div class="col-sm-10">
          {{input type="text" id="farm-name" name="farm-name" value=model.farmName class="form-control" placeholderTranslation='host.form.farmName.placeholder'}}
          {{error-display errors=model.fieldErrors.farmName}}
        </div>
      </div>
      <div class="form-group {{if model.fieldErrors.shortDescription.length 'has-error'}}">
        <label for="shortDescription" class="col-sm-2 control-label">{{t 'host.form.shortDescription.label'}}</label>

        <div class="col-sm-10">
          {{input type="text" id="shortDescription" name="shortDescription" value=model.shortDescription class="form-control" placeholderTranslation='host.form.shortDescription.placeholder'}}
          {{error-display errors=model.fieldErrors.shortDescription}}
        </div>
      </div>
      <div class="form-group {{if model.fieldErrors.fullDescription.length 'has-error'}}">
        <label for="fullDescription" class="col-sm-2 control-label">{{t 'host.form.fullDescription.label'}}</label>

        <div class="col-sm-10">
          {{textarea id="fullDescription" name="fullDescription" value=model.fullDescription class="form-control" placeholderTranslation='host.form.fullDescription.placeholder' rows="10"}}
          {{error-display errors=model.fieldErrors.fullDescription}}
        </div>
      </div>
      <div class="col-sm-offset-2 col-sm-10 mbs">
        <p class="form-details">
          {{t 'host.form.fullDescriptionDetails'}}
        </p>
      </div>
      <div class="form-group {{if model.fieldErrors.phone.length 'has-error'}}">
        <label for="phone" class="col-sm-2 control-label">{{t 'host.form.phone.label'}}</label>

        <div class="col-sm-10">
          {{input type="text" id="phone" name="phone" value=model.user.phone class="form-control" placeholderTranslation='host.form.phone.placeholder'}}
          {{error-display errors=model.fieldErrors.phone}}
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">{{t 'host.form.communicationPreferences'}}</label>

        <div class="col-sm-10">
          <div class="checkbox">
            <label>
              {{input type="checkbox" id="noPhone" name="noPhone" checked=model.noPhone}}
              {{t 'host.form.noPhone.label'}}
            </label>
          </div>
          <div class="checkbox">
            <label>
              {{input type="checkbox" id="noEmail" name="noEmail" checked=model.noEmail}}
              {{t 'host.form.noEmail.label'}}
            </label>
          </div>
        </div>
      </div>
      <div class="col-sm-offset-2 col-sm-10 mbs">
        <p class="form-details">
          {{t 'host.form.contactInformationDetails'}}
        </p>
      </div>

      <div class="form-group {{if model.fieldErrors.webSite.length 'has-error'}}">
        <label for="webSite" class="col-sm-2 control-label">{{t 'host.form.website.label'}}</label>

        <div class="col-sm-10">
          {{input type="text" id="webSite" name="webSite" value=model.webSite class="form-control" placeholderTranslation='host.form.website.placeholder'}}
          {{error-display errors=model.fieldErrors.webSite}}
        </div>
      </div>
      <div class="form-group">
        <label for="travelDetails" class="col-sm-2 control-label">{{t 'host.form.travel.label'}}</label>

        <div class="col-sm-10">
          {{input type="text" id="travelDetails" name="travelDetails" value=model.travelDetails class="form-control" placeholderTranslation='host.form.travel.placeholder'}}
        </div>
      </div>
      <div class="col-sm-offset-2 col-sm-10">
        <p class="form-details">
          {{t 'host.form.travelDetails'}}
        </p>
      </div>
      <div class="form-group">
        <label for="openingMonths" class="col-sm-2 control-label">{{t 'host.form.activities'}}</label>

        <div class="col-sm-10 toggle-options-cols">
          {{toggle-options values=activitiesService.allActivities selected=model.activities optionValuePath='id'}}
        </div>
      </div>
      <hr class="col-sm-offset-2 col-sm-10">
      <div class="form-group">
        <label for="openingMonths" class="col-sm-2 control-label">{{t 'host.form.openingMonths'}}</label>

        <div class="col-sm-10 toggle-options-cols capitalize">
          {{toggle-options values=monthsService.allMonths selected=model.openingMonths optionValuePath='id'}}
        </div>
      </div>
      {{#unless model.isNew}}
        <hr class="col-sm-offset-2 col-sm-10">
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <div class="checkbox">
              <label>
                {{input type="checkbox" id="isHidden" name="isHidden" checked=model.isHidden}}
                {{t 'host.form.isHidden.label'}}
              </label>
            </div>
          </div>
        </div>
        <div class="col-sm-offset-2 col-sm-10">
          <span class="form-details">
            {{t 'host.form.isHiddenDetails'}}
          </span>
        </div>
      {{/unless}}
    </div>
  </div>

  {{#if sessionUser.user.isAdmin}}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">{{t 'host.form.admin'}}</h3>
      </div>
      <div class="panel-body">
        <div class="form-group {{if model.fieldErrors.note.length 'has-error'}}">
          <label for="note" class="col-sm-2 control-label">{{t 'host.form.note.label'}}</label>

          <div class="col-sm-10">
            {{textarea id="note" name="note" value=model.note class="form-control" rows="4"}}
            {{error-display errors=model.fieldErrors.note}}
          </div>
        </div>
      </div>
    </div>
  {{/if}}

  <div class="form-group">
    <div class="col-xs-12">
      <button {{action "saveHost"}} class="btn btn-primary {{if model.isNew 'pull-right'}}" disabled={{model.isSaving}}>
        {{#if model.isNew}}
          {{t 'literal.continue'}}
        {{else}}
          {{t 'literal.save'}}
        {{/if}}
      </button>
    </div>
  </div>
</form>
