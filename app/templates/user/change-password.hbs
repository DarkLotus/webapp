<div class="page-header">
    <h1>Change My Password</h1>
</div>
<form autocomplete="on" method="POST" {{action "changePassword" on="submit"}}>
    <div {{bind-attr class=":form-group fieldErrors.password.length:has-error"}}>
        <label for="password" class="control-label">Password</label>
        {{input value=password name="password" type="password" class="form-control"}}
        {{error-display fieldErrors.password}}
    </div>
    <div {{bind-attr class=":form-group fieldErrors.passwordConfirmation.length:has-error"}}>
        <label for="passwordConfirmation" class="control-label">Confirm Password</label>
        {{input value=passwordConfirmation name="passwordConfirmation" type="password" class="form-control"}}
        {{error-display fieldErrors.passwordConfirmation}}
    </div>
    <button type="submit" class="btn btn-primary" {{bind-attr disabled="isLoading"}}>Save Password</button>
</form>