<div class="col-md-10 col-md-offset-1">
    <div class="page-header">
        <h1>
            {{t 'user.memberships.title'}}
        </h1>
    </div>

    <div class="row">
        <div class="col-md-6">
            <h4>{{t 'user.memberships.wwoofer'}}</h4>
            {{#if localUserMembershipsService.hasWwoofMemberships}}
                {{wwoofer-membership-status membershipsService=localUserMembershipsService}}
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>{{t 'user.memberships.code'}}</th>
                        <th>{{t 'user.memberships.payment'}}</th>
                        <th>{{t 'user.memberships.amount'}}</th>
                        <th>{{t 'user.memberships.expireAt'}}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each wwoofMembership in localUserMembershipsService.wwoofMemberships}}
                        <tr>
                            <td>{{wwoofMembership.itemCode}}</td>
                            <td>{{format-date wwoofMembership.createdAt}}</td>
                            <td>{{wwoofMembership.total}} Euro</td>
                            <td>{{format-date wwoofMembership.expireAt}}</td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
                <i>{{t 'user.memberships.renewalInstructions'}}</i>
            {{else}}
                {{t 'user.memberships.noWwooferMemberships'}}
            {{/if}}
        </div>
        <div class="col-md-6">
            <h4>{{t 'user.memberships.host'}}</h4>
            {{#if localUserMembershipsService.hasHostMemberships}}
                {{host-membership-status membershipsService=localUserMembershipsService}}
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>{{t 'user.memberships.code'}}</th>
                        <th>{{t 'user.memberships.payment'}}</th>
                        <th>{{t 'user.memberships.amount'}}</th>
                        <th>{{t 'user.memberships.expireAt'}}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each hostMembership in localUserMembershipsService.hostMemberships}}
                        <tr>
                            <td>{{hostMembership.itemCode}}</td>
                            <td>{{format-date hostMembership.createdAt}}</td>
                            <td>{{hostMembership.total}} Euro</td>
                            <td>{{format-date hostMembership.expireAt}}</td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
                <i>{{t 'user.memberships.renewalInstructions'}}</i>
            {{else}}
                {{t 'user.memberships.noHostMemberships'}}
            {{/if}}
        </div>
    </div>
</div>
