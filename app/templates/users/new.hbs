<div class="page-header">
    {{#if isNew}}
        <h1>Join Our Community Today!</h1>
    {{else}}
        <h1>My Account</h1>
    {{/if}}
</div>
<form>
    <div class="row">
        <div class="col-md-6">
            <div {{bind-attr class=":form-group"}}>
                <label for="firstName" class="control-label">First Name</label>
                {{input type="text" id="firstName" name="firstName" value=firstName class="form-control" placeholder="First name"}}
            </div>
            <div {{bind-attr class=":form-group"}}>
                <label for="lastName" class="control-label">Last Name</label>
                {{input type="text" id="lastName" name="lastName" value=lastName class="form-control" placeholder="Last name"}}
            </div>
            <div {{bind-attr class=":form-group"}}>
                <label for="birthDate" class="control-label">Birth date</label>
                {{date-picker value=birthDate}}
            </div>
        </div>
        <div class="col-md-6">
            <div {{bind-attr class=":form-group"}}>
                <label for="email" class="control-label">Email Address</label>
                {{input type="text" id="email" name="email" value=email class="form-control" placeholder=""}}
            </div>
            <div {{bind-attr class=":form-group"}}>
                <label for="password" class="control-label">Password</label>
                {{input type="password" id="password" name="password" value=password class="form-control" placeholder=""}}
            </div>
        </div>
    </div>
    {{#if isNew}}
        <button {{action "saveUser"}} class="btn btn-primary">Register</button>
    {{else}}
        <button {{action "saveUser"}} class="btn btn-primary">Save</button>
    {{/if}}
</form>

{{#unless isNew}}
    <h1>My Membership Status</h1>
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Type</th>
            <th>Payment</th>
            <th>Amount</th>
            <th>Expire At</th>
        </tr>
        </thead>
        <tbody>
        {{#each memberships}}
            <tr>
                <td>{{type}}</td>
                <td>{{format-date createdAt}}</td>
                <td>{{itemCode}}</td>
                <td>{{format-date expireAt}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>
{{/unless}}