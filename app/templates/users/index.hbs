<div class="page-header">
    <h1>
        Users
    </h1>
</div>

<table class="table table-hover">
    <thead>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Host</th>
        <th>Wwoofer</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {{#each}}
        <tr>
            <td>{{firstName}}</td>
            <td>{{lastName}}</td>
            <td>{{email}}</td>
            <td>{{#if host}}<span class="glyphicon glyphicon-ok"></span>{{/if}}</td>
            <td>{{#if wwoofer}}<span class="glyphicon glyphicon-ok"></span>{{/if}}</td>
            <td>
                {{#link-to "user" id}}View{{/link-to}} |
                {{#link-to "user.edit" id}}Edit{{/link-to}} |
                <a href="#">Delete</a>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>
